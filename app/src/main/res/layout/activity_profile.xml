<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:textAlignment="center">


    <TextView
        android:id="@+id/topLogo8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/topLogo"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/ProfileImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLogo8"
        app:srcCompat="@drawable/profile_img" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="494dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="27dp"
        android:background="#090909"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/team8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/userNameProfile"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:inputType="text"
            android:text="@string/SettingUsersName"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/firstNameProfile"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="@string/firstNameProfile"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lastNameProfile"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="@string/lastNameProfile"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="@string/emailProfile"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phoneProfile"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="text"
            android:text="@string/phoneNumberProfile"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/addressProfile"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="@string/addressProfile"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/team8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/teamName"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>